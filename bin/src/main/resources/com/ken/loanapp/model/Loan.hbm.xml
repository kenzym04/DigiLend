<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="loan_db" name="com.ken.loanapp.model.Loan" optimistic-lock="version" table="loan">
    <id name="loanNo" type="java.lang.Integer">
      <column name="loan_no"/>
      <generator class="identity"/>
    </id>
    <many-to-one class="com.ken.loanapp.model.User" fetch="select" name="userByCustIdNo">
      <column name="cust_id_no"/>
    </many-to-one>
    <many-to-one class="com.ken.loanapp.model.User" fetch="select" name="userByOfficerIdNo">
      <column name="officer_id_no"/>
    </many-to-one>
    <property name="loanStatusId" type="java.lang.Integer">
      <column name="loan_status_id"/>
    </property>
    <property name="loanAmt" type="big_decimal">
      <column name="loan_amt" precision="9"/>
    </property>
    <one-to-one class="com.ken.loanapp.model.Repayment" name="repayment"/>
  </class>
</hibernate-mapping>
